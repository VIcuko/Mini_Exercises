<h1>Welcome to Timetracking tool</h1>
<h3>Projects</h3>
<ul>
	<% @projects.each do |project| %>
	<li><%= project.id %> - <%= project.name %>
		<%= project.description.present? ? "- #{project.description}" : " " %>
		<%= link_to("Delete", "/projects/#{project.id}", method: :delete) %>
	</li>
	<% end %>
</ul>